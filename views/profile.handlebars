{{> navbar petition=true home=true}}

{{#if error}}<div id="input-err">something went wrong with the registration, please try again</div>{{/if}}
{{#if wrongUrl}}<div id="input-err">Wrong URL Input, URL has to start with: http:, https: or //</div>{{/if}}


<form action="" method="POST">
<label for="profile-age">Age</label>
<input type="number" id="profile-age" name="age">
<label for="profile-city">City</label>
<input type="text" id="profile-city" name="city">
<label for="profile-url">Homepage</label>
<input type="text" id="profile-url" name="url">
<button id="signup-btn">continue</button>
</form>
