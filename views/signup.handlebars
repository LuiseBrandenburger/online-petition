{{> navbar }}

{{#if error}}<div id="input-err">something went wrong with the registration, please try again</div>{{/if}}

<form action="" method="POST">
<label for="signup-first">First Name</label>
<input type="text" id="signup-first" name="first">
<label for="signup-last">Last Name</label>
<input type="text" id="signup-last" name="last">
<label for="signup-email">E-Mail</label>
<input type="email" id="signup-email" name="email">
<label for="signup-pw">Password</label>
<input type="password" id="signup-pw" name="password">
<button id="signup-btn">sign up</button>
</form>

